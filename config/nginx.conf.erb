daemon off;
worker_processes auto;

events {
  use epoll;
  accept_mutex on;
  worker_connections 512;
}

http {
  gzip on;
  gzip_comp_level 6;
  gzip_min_length 512;
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;
  gzip_vary on;
  gzip_proxied any;

  server_tokens off;

  access_log logs/access.log;

  error_log stderr error;

  include mime.types;
  default_type application/octet-stream;
  sendfile on;

  #Must read the body in 5 seconds.
  client_body_timeout 5;

  server {
    listen 14320 reuseport;
    charset UTF-8;
    port_in_redirect off;
    keepalive_timeout 5;
    root dist;

    add_header Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self'; font-src 'self'; script-src 'self'; connect-src https://skdvin-api-acc.herokuapp.com https://mydropz.one https://*.mydropz.one https://skdvin-dev.eu.auth0.com https://skdvin-prod.eu.auth0.com https://o381189.ingest.sentry.io; frame-src 'self' https://skdvin-dev.eu.auth0.com https://skdvin-prod.eu.auth0.com; report-uri https://o381189.ingest.sentry.io/api/5219798/security/?sentry_key=9d3f0ac6e237457099e846b977f69d69;";
    add_header Referrer-Policy "no-referrer-when-downgrade";
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
    add_header X-Content-Type-Options "nosniff";
    add_header X-Frame-Options "DENY";

    location / {
      try_files $uri.html $uri $uri/ /index.html;
    }

    location ~ \.html$ {
      try_files $uri =404;
    }

    if ($http_x_forwarded_proto != "https") {
      return 301 https://$host$request_uri;
    }

    location ~ ^/.*$ {
      try_files $uri.html $uri $uri/ /index.html;
    }

    # need this b/c setting $fallback to =404 will try #{root}=404 instead of returning a 404
    location @404 {
        return 404;
    }

    # fallback proxy named match

    # fallback redirects named match

  }
}